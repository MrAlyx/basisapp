<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    {% endblock %}
</head>
<body>
<style>

</style>
<nav class="navbar navbar-expand-lg py-3 navbar-light bg-light shadow-sm">
    <div class="container text-dark">
        <a href="{{ path('default') }}" class="navbar-brand">
            <!-- Logo Image -->
            <img src="https://thesoftwaretestingcompany.nl/wp-content/uploads/2018/06/The-Software-Testing-Company-logo-NS.png" width="45" alt="" class="d-inline-block align-middle mr-2">
            <!-- Logo Text -->
            <span class="text-uppercase font-weight-bold">DHL</span>
        </a>

        <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span class="navbar-toggler-icon"></span></button>

        <div id="navbarSupportedContent" class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a href="{{ path('default') }}" class="nav-link">Home <span class="sr-only">(current)</span></a></li>
                <li class="nav-item"><a href="#" class="nav-link">About</a></li>
                <li class="nav-item"><a href="{{ path('blog_index') }}" class="nav-link">Blog</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Services</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a href="{{ path('user_index') }}" class="nav-link">Users</a></li>
                {% endif %}
                {% if app.user %}
                <li class="nav-item"><a href="{{ path('app_logout') }}" class="nav-link">Logout {{ app.user.username }}</a></li>
                {% else %}
                <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link">Login</a></li>
                <li class="nav-item"><a href="{{ path('app_register') }}" class="nav-link">Register</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
